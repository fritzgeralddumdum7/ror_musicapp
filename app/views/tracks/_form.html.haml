= form_with model: @track, class: 'w-full' do |f|
  %div{ class: 'flex w-full flex-col gap-2 mb-4' }
    %h1 Available?
    %div{ class: 'flex gap-2 items-center h-full w-1/2' }
      %div{ class: 'flex-1' }
        = f.radio_button :available, "Yes"
        = f.label :yes
      %div{ class: 'flex-1' }
        = f.radio_button :available, "No"
        = f.label :no
  %div{ class: 'grid grid-cols-2 gap-6 mb-6' }
    %div{ class: 'w-full' }
      = f.text_field :name, class: "#{f.object.errors[:name].present? ? 'border-red-500 border' : 'border-gray-500 border'} p-2 w-full", placeholder: 'Name'
      - if f.object.errors[:name].present?
        %span{ class: 'text-red-500 text-sm' }= "Name #{f.object.errors[:name].to_sentence}"

    %div{ class: 'w-full' }
      = f.text_field :url, class: "#{f.object.errors[:url].present? ? 'border-red-500 border' : 'border-gray-500 border'} p-2 w-full", placeholder: 'URL'
      - if f.object.errors[:url].present?
        %span{ class: 'text-red-500 text-sm' }= "URL #{f.object.errors[:url].to_sentence}"
  
  = f.text_area :credits, class: "#{f.object.errors[:credits].present? ? 'border-red-500 border' : 'border-gray-500 border'} p-2 w-full", rows: 5, placeholder: 'Write something for the credits...'
  - if f.object.errors[:credits].present?
    %span{ class: 'text-red-500 text-sm' }= "Credits #{f.object.errors[:credits].to_sentence}"

  %div{ class: 'w-full flex justify-end mt-2' }
    = f.submit class: 'px-4 py-2 w-40 bg-indigo-800 text-white hover:bg-indigo-700 cursor-pointer'
